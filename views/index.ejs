<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Records</title>
    <link rel="stylesheet" href="/index.css">
</head>
<body>
    <div class="header">
        <div>
            <h2>Flight Records</h2>
        </div>
        <div class="buttonAdd">
            <form action="/add" method="GET">
                <button>Add Record +</button>
            </form>
        </div>
    </div>
    <div class="wrapper">
        <table>
            <tr>
                <th>Passenger</th>
                <th>Trip Type</th>
                <th>Origin</th>
                <th>destination</th>
            </tr>
    <%userFlight.forEach(flight => {%> 
            <tr>
                <td><%= flight.first_name + " " + flight.last_name %></td>
                <td><%= flight.trip_type %></td>
                <td><%= flight.origin %></td>
                <td><%= flight.destination %></td>
                <td style="background-color: transparent;"><button class="buttonDelete" value='<%= flight._id%>' id="delete">X</button></td>
            </tr>
    <%})%>
        </table>
    </div>
    <script src="/main.js">
    </script>
</body>
</html> 